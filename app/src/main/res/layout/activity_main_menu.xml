<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".Main_Menu">
    <!-- Exercise Tracking -->
    <TextView
        android:id="@+id/tv_exercise_tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Tracking"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#000"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />
    <!-- Food Diary -->
    <TextView
        android:id="@+id/tv_food_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Diary"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#000"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />
    <!-- Meal Planning -->
    <TextView
        android:id="@+id/tv_meal_planning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Planning"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#000"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />
    <!-- Reports & Analytics -->
    <TextView
        android:id="@+id/tv_reports_analytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reports &amp; Analytics"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#000"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />
    <!-- Goals -->
    <TextView
        android:id="@+id/tv_goals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goals"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#000"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />
    <!-- Fitness Programs -->
    <TextView
        android:id="@+id/tv_fitness_programs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitness Programs"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#000"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />
    <!-- Settings -->
    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#000"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>