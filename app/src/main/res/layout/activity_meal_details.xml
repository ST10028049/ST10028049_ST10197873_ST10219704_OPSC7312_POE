<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title at the top -->
    <TextView
        android:id="@+id/title_meal_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Meal Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <!-- Meal Name Label -->
    <TextView
        android:id="@+id/label_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Text Box for capturing meal name -->
    <EditText
        android:id="@+id/input_meal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter meal name"
        android:inputType="text" />

    <!-- Meal Description Label -->
    <TextView
        android:id="@+id/label_meal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Description"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Text Box for capturing meal description -->
    <EditText
        android:id="@+id/input_meal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter meal description"
        android:inputType="textMultiLine" />

    <!-- Meal Type Label -->
    <TextView
        android:id="@+id/label_meal_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Type"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Dropdown for selecting meal type -->
    <Spinner
        android:id="@+id/spinner_meal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/meal_types" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
