<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title at the top -->
    <TextView
        android:id="@+id/title_meal_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Goal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <!-- Meal Name -->
    <TextView
        android:id="@+id/label_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Name"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/input_goal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter goal name"
        android:inputType="text" />

    <!-- Meal Description -->
    <TextView
        android:id="@+id/label_goal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Description"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/input_goal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter goal description"
        android:inputType="textMultiLine" />

    <!-- Goal Type -->
    <TextView
        android:id="@+id/label_goal_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Type"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_goal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/goal_types" />

    <!-- Calories -->
    <TextView
        android:id="@+id/label_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/input_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount"
        android:inputType="number" />

    <!-- Date -->
    <TextView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/input_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pick date"
        android:focusable="false"
        android:clickable="true" />



    <!-- Submit Button -->
    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
